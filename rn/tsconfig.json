{
	"include": [
		"global.d.ts",
		"src",
		"index.js",
	],
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": [
			"es2017"
		],
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@berty-labs/*": [
				"./src/*"
			]
		},
		"noEmit": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		"html-mods",
		"html-mods.bundle",
		"ios",
	]
}